<%= stimulated.div do |component| %>
  <% clipboard = component.connect("clipboard") %>
  <% effects = component.connect("effects") %>

  <% component.on(clipboard[:copy], effects.flash) %>

  PIN:
  <%= stimulated.input(type: "text", value: "1234", readonly: true) do |input| %>
    <% clipboard.source = input %>
  <% end %>

  <%= stimulated.button do |input| %>
    <% input.fire(clipboard.copy) %>

    Copy to Clipboard
  <% end %>
<% end %>
